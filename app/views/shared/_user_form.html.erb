<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :second_name %>
  <%= f.text_field :second_name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>

  <%= f.label :active %>
  <%= f.check_box :active %>

  <%= f.submit 'Submit' %>
<% end %>
